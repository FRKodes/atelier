.white
	color white
header
	background transparent url(../../images/fondo-banner-atelier-taller-tipografia.jpg) no-repeat center center
	background-size cover
	color white
	height 250px
	padding 10px 0 0 10px
	text-align left
	span
		display inline-block
		font-size 4.2rem
		height 50px
		margin-right 20px
		vertical-align top
	h1
		color white
		display block
		font-size 10em
		height 140px
		text-align center
		width 100%
ul.social
	display inline-block
	padding 5px 0 0 0
	position relative
	li
		display inline-block
		height 50px
		padding 0 5px
		a
			color white
			font-size 2em
button.slick-prev
button.slick-next
	display none
body
	background-color black
	color white
	font-family 'Source Sans Pro', sans-serif
	h2
		font-weight bold
	.cd-item
		h2
		b
			color white
		p
			font-style italic
			font-size 1em
	.slick-slider
		display block
		margin 0 auto 0 auto
		p
			font-size 1em
			margin-bottom 10px
			padding 0 40px
			text-align center
		.slick-prev
		.slick-next
			background-color transparent
			border 1px solid white
			border-radius 50%
			color white
			font-size 1.4em
			height 40px
			margin-top -20px
			outline none
			position absolute
			top 50%
			width 40px
		.slick-next
			right 10px
	.fabrica
	.acuarela
	.behance-01
	.behance-02
	.logos-cero-01
	.logos-cero-02
		background-color transparent url(../../images/behance-review-01.jpg) no-repeat center center
		background-size cover
	.logos-cero-01
		background gray url(../../images/logos-desde-cero-banner.jpg) no-repeat center center
	.logos-cero-02
		background-image url(../../images/logos-desde-cero-02.jpg)
	.di25nando
		background-image url(../../images/portada-disenando-disenadores.jpg)
		background-size cover
	.behance-01
		background-image url(../../images/behance-review-01.jpg)
	.fabrica
		background-image url(../../images/logos-desde-cero-paco-calles.jpg)
	.acuarela
		background-image url(../../images/taller-acuarela-atelier.jpg)
	.acuarela-marisa
		background-image url(../../images/acuarela-marisa-cover-home.jpg)
	.behance-02
		background-image url(../../images/behance-review-02.jpg)
	.contact
		padding 20px 0
		text-align center
		h2
			font-size 5em
		h3
			font-size 1.2em
			padding-bottom 20px
		h3
		p
			padding 0 5%
		form
			margin 30px auto 0 auto
			position relative
			width 90%
			.line
				display block
				height auto
				overflow hidden
				padding-bottom 20px
				width 100%
				input[type="text"]
					background-color white
					border none
					font-size 1.1em
					height 30px
					padding 5px
					width 100%
				textarea
					background-color white
					border none
					font-size 1.1em
					height 100px
					padding 5px
					resize none
					width 100%
				.submit_btn
					background-color transparent
					border 1px solid #999
					color #999
					font-size 1.1em
					padding 5px 0
					text-transform uppercase
					width 50%
					&:hover
						cursor pointer
				&.error
					input[type="text"]
					textarea
						border 1px solid red
						
			.alert_fields
				color red
				margin 0 0 20px 0
				text-align left
				display none
			.sent_mail_alert
				background-color rgba(white, .9)
				color black
				top 200px
				display none
				margin-top -200px
				position absolute
				padding 20px 30px
				text-align center
	hr
		width 94%
		margin 0 auto
	footer
		text-align center
		padding-bottom 40px
		.icon-03-1
			font-size 10em
			line-height .4em
	.bt_credits
		margin-top 30px
	/*sections/courses*/
	.cd-fold-content
	.logos-desde-cero
		background-color #404040
		figure
			overflow hidden
			img
				display block
				height auto
				width 100%
		.features-logos
		.acuarela-basica
			li
				padding 5px 0
		a
			color white
			font-style italic
@media screen and (min-width:540px)
	body
		.contact
			h3
			p
			form
				width 480px
				margin 20px auto
@media screen and (min-width:600px)
	header
		padding 10px 0 0 10px
		height 300px
	body
		.slick-slider
			margin 20px auto 0 auto
			p
				font-size 1.2em
@media screen and (min-width:768px)
	.cd-item
		height 450px
	ul.social
		li
			a
				font-size 3em
	header
		height 500px
		span
			display inline-block
			font-size 6.2rem
			height 50px
			vertical-align top
			margin-right 20px
		h1
			display block
			font-size 14em
			text-align center
			height 80px
			width 100%
			color white
	body
		.slick-slider
			display block
			min-height 400px
			padding-top 80px
			h1
				height 160px
			p
				font-size 1.3em
				line-height 1.4em
				margin 20px 0
				padding 0 100px